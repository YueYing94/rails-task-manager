<h1>All tasks</h1>
<ul>
<% @tasks.each do |task| %>
<%= form_for(task) do |f| %>
<li>
<%= f.check_box :completed %> <%= link_to task.title, task_path(task) %>
<%= link_to task_path(task.id), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} do %>
<i class="fa-regular fa-trash-can"></i>
<% end %>
</li>
<% end %>
<% end %>
</ul>

<%= link_to "Add new task", tasks_new_path %>
