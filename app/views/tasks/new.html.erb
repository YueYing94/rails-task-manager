<h1>Create a task</h1>

<%= form_with model: @task do |f| %>
  <%= f.label :title, class: "form-label m-2"%>
  <%= f.text_field :title, class:"form-control m-2 w-50" %>
  <%= f.label :details, class: "form-label m-2" %>
  <%= f.text_field :details, class:"form-control m-2 w-50" %>
  <%= button_tag(type: 'submit', class: 'btn btn-primary m-2') do %>
  Submit
<% end %>
<% end %>
